<div class="question">
  <div class="stats">
    <span class="num-votes">votes:<%=@question.votes.count%></span>
    <span class="num-answers">answers:<%=@question.answers.count%></span>
    <span class="num-views">visits:<%=@question.visits%></span>
  </div>
  <div class="question-text"><h2><%=@question.question%></h2></div>
  <div class="author"><%=@question.user.username%></div>
  <div class="question-description"><%=@question.description%></div>

  <%if current_user.id == @question.user_id %>
    <form id="delete-button" action="/questions/<%=@question.id%>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
  <%end%>

  <div class="comment-error">
  <%if @comment_error%>
    <%@comment_error.each do |error|%>
      <div class="error">***<%=error%>***</div>
    <%end%>
  <%end%>
  </div>

  <form id="new_comment_button" action="/questions/<%=@question.id%>/comments" method="get">
    <input type="submit" value="add comment">
  </form>
</div>
<br>
<div class="question-comments">
  <%@question.comments.each do |comment|%>
  <div class="comment">
    <span class="author"><%=comment.user.username%></span><br>
    <%=comment.comment%>
    <%if current_user.id == comment.user_id %>
      <form id="delete-button" action="/comments/<%=comment.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="delete">
      </form>
    <%end%>
  </div>
</div>
<%end%>

<br>
<div class="answer">
 <%@question.answers.each do |answer|%>
    <span class="author"><%=answer.user.username%></span><br>
    <%=answer.answer%>
    <%if current_user.id == answer.user_id %>
      <form id="delete-button" action="/answers/<%=answer.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="delete">
      </form>
    <%end%>
    <br><br>
  <%end%>
</div>
 <br>

<div class="answer_error">
  <%if @errors%>
    <%@errors.each do |error|%>
      <div class="error">**<%=error%>**</div>
    <%end%>
  <%end%>
</div>

<div class="submit-answer">
  <h2>Your Answer:</h2>
  <form action="/questions/<%=@question.id%>/answers" method="post">
    <textarea rows="10" cols="50" id="answer-text" name="answer"><%=@answer_text%></textarea>
    <input type="submit" value="Post Your Answer">
  </form>
</div>